    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "standard-version": "^9.1.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
